{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "pretty": true,
    "declaration": true,
    "outDir": "lib",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "types": ["node", "jest"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["**/__tests__/**"],
  "ts-node": {
    "files": true
  }
}
